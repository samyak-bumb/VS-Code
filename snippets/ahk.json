{
  "AHK Boilerplate": {
    "prefix": "q",
    "body": [
      "; ==================================================================================",
      "; Name ..........: ${1:Name}.ahk",
      "; Description ...: Description",
      "; Modified ......: ${2:DD-MM-YY}",
      "; Author ........: Samyak Bumb",
      "; ==================================================================================\n",
      // "#Warn, UseUnsetLocal",
      "#NoEnv",
      "#Persistent, On",
      "#MaxMem 4095",
      "#SingleInstance Force",
      "#UseHook Off\n",
      "SendMode Input",
      "SetWorkingDir %A_ScriptDir%\n",
      "if not A_IsAdmin\n{\n\tRun *RunAs \"%A_ScriptFullPath%\"\n\tExitApp\n}\n\n; *****************************************************************************",
      "$0\n; *****************************************************************************\n"
    ]
  },
  "Func Comment": {
    "prefix": "cmtfunc",
    "body": "; === ${1:Func Name} ===\n"
  },
  "Line Comment": {
    "prefix": "cmt",
    "body": [
      "; *****************************************************************************",
      "; ${1:Comment}",
      "; *****************************************************************************\n"
    ]
  }
}
