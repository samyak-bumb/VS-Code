// Created/Written by Tungsten
{
	"@debug": {
		"prefix": "@d1",
		"body": "@debug ${0:message};"
	},
	"@warn": {
		"prefix": "@w1",
		"body": "@warn ${0:message};"
	},
	"@error": {
		"prefix": "@e1",
		"body": "@error ${0:message};"
	},
	"@forward": {
		"prefix": "@f1",
		"body": "@forward '$0';"
	},
	"@use": {
		"prefix": "@u1",
		"body": "@use '$0';"
	},
	"if()": {
		"prefix": "i$3",
		"body": "if(${1:condition}, ${2:true}, ${0:false})"
	},
	"@if {}": {
		"prefix": "@i_",
		"body": "@if ${0:condition} {\n\t\n}"
	},
	"@if {} @else if {}": {
		"prefix": "@ei_",
		"body": "@else if ${0:condition} {\n\t\n}"
	},
	"@else {}": {
		"prefix": "@e_",
		"body": "@else {\n\t$0\n}"
	},
	"@for from through": {
		"prefix": "@fft_",
		"body": "@for ${1:$i} from ${2:1} through ${0:$end} {\n\t\n}"
	},
	"@each": {
		"prefix": "@ei_",
		"body": "@each ${1:$item} in ${0:$items} {\n\t\n}"
	},
	"@while": {
		"prefix": "@w_",
		"body": "@while ${0:condition} {\n\t\n}"
	},
	"@at-root": {
		"prefix": "@ar_",
		"body": "@at-root$1 {\n\t$0\n}"
	},
	"@content": {
		"prefix": "@c1",
		"body": "@content;"
	},
	"@extend": {
		"prefix": "@e1",
		"body": "@extend ${0:name};"
	},
	"@include ()": {
		"prefix": "@i$",
		"body": "@include ${0:name}();"
	},
	"@include {}": {
		"prefix": "@i_",
		"body": "@include ${1:name} {\n\t\n\t$0\n\t\n}"
	},
	"@include () {}": {
		"prefix": "@i$_",
		"body": "@include ${1:name}() {\n\t\n\t$0\n\t\n}"
	},
	"@mixin () {}": {
		"prefix": "@m$_",
		"body": "@mixin ${1:name} ($2) {\n\t\n\t$0\n\t\n}"
	},
	"@function () {}": {
		"prefix": "@f_",
		"body": "@function ${1:name} ($2) {\n\t\n\t$0\n\t\n}"
	},
	"@return": {
		"prefix": "@r",
		"body": "@return"
	}
}
